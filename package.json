{
  "name": "identifiers-js",
  "version": "0.0.1",
  "description": "Base128 definition and tests",
  "main": "./lib/index.js",
  "repository": "https://www.github.com/Identifiers/identifiers-js",
  "author": "mattbishop",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "js.spec": "1.0.0-15",
    "long": "3.2.0",
    "msgpack-lite": "0.1.26"
  },
  "devDependencies": {
    "@types/benchmark": "1.0.31",
    "@types/chai": "4.0.5",
    "@types/faker": "4.1.2",
    "@types/js.spec": "1.0.1",
    "@types/long": "3.0.32",
    "@types/mocha": "2.2.44",
    "@types/msgpack-lite": "0.1.6",
    "benchmark": "2.1.4",
    "chai": "4.1.2",
    "faker": "4.1.0",
    "istanbul": "0.4.5",
    "mocha": "4.0.1",
    "nyc": "11.3.0",
    "rimraf": "2.6.2",
    "source-map-support": "0.5.0",
    "ts-node": "3.3.0",
    "typescript": "2.6.1"
  },
  "scripts": {
    "build:commonjs": "rimraf lib && tsc --target es5 --outDir lib --module commonjs --declaration",
    "build:es": "rimraf es && tsc --target es6 --outDir es --module es6",
    "build": "npm run build:commonjs && npm run build:es",
    "ts": "ts-node src/",
    "test": "mocha --opts mocha.opts",
    "coverage": "nyc mocha --opts mocha.opts",
    "prepublishOnly": "yarn run build",
    "alias-msgpack-ts": "ln -s \"$(pwd)/node_modules/@types/msgpack-lite\" ./node_modules/@types/msgpack-long-lite"
  },
  "files": [
    "es",
    "lib"
  ],
  "types": "./lib/index.d.ts",
  "module": "./es/index.js",
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/base128/benchmark.ts",
      "src/base128/generate-table.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "html"
    ],
    "sourceMap": true,
    "all": true
  }
}
